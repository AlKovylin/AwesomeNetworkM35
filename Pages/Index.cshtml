@page
@using AwesomeNetworkM35.Models
@using Microsoft.AspNetCore.Identity
@model AwesomeNetworkM35.ViewModel.RegisterViewModel
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;
@{
    ViewData["Title"] = "Главная";

}
@if (SignInManager.IsSignedIn(User))
{
    <div>Hello @User.Identity!</div>
}
else
{
    <div class="row">
        <div class="side">
            <div class="center">
                Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей.
            </div>
            <img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" />
        </div>


        <div class="main">
      <partial name="Login"/>
            <partial name="Register"/>
        </div>

    </div>

}